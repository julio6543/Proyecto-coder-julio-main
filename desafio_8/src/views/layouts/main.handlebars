<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title> Dix Gamer - ðŸŽ®</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <style>
    footer {
      background-color: #343a40;
      color: #ffffff;
      padding: 20px 0;
      position: fixed;
      bottom: 0;
      width: 100%;
      text-align: center;
    }

    footer p {
      margin-bottom: 0;
    }

    .main-content {
      min-height: calc(100vh - 74px);
      padding-bottom: 60px;
    }

    .input-group {
      width: 300px;
    }

    .input-group input[type="text"] {
      border: none;
      border-radius: 0;
      padding: 10px;
      box-shadow: none;
    }

    .input-group button[type="submit"] {
      background-color:
        #28a745;
      border: none;
      border-radius: 0;
      padding: 10px 20px;
      color: #fff;
    }

    .input-group button[type="submit"]:hover {
      background-color: #218838;
      color: #fff;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Dix Gamer ðŸŽ®</a>
      <div class="mx-auto">
        <form class="d-flex" method="GET">
          <div class="input-group">
            <input class="form-control me-2" type="text" placeholder="Buscar productos..." name="q" />
            <button class="btn btn-outline-success" type="submit">Buscar</button>
          </div>
        </form>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          {{#if session.session.loggedIn}}
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          {{/if}}
          <li class="nav-item">
            <a class="nav-link" href="/realtimeproducts">Real Time Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/chat">Chat</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container my-5 main-content">
    {{{body}}}
  </div>
  <footer>
    <div class="container">
      <p>&copy; 2023 Dix Gamer ðŸŽ®. Todos los derechos reservados.</p>
    </div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>

</html>